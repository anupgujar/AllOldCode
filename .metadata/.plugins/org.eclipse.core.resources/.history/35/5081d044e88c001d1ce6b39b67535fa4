package firstDecPackage;

public class Test1 {
	public static void main(String[] args) {
	int n = 4;
	//1st half
	for (int i = 1; i <=n; i++) {
		for (int j = 1; j <=i; j++) {
			System.out.print("*");
		}//print spaces
		for (int j = 1; j <=2*(n-i); j++) {
			System.out.print(" ");
		}//2nd half
		for (int j = n; j>=1; j--) {
			System.out.print("*");
		}
		System.out.println();		
	}
	
	}
}
